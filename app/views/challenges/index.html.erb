<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>🎮 マイチャレンジ</h1>
    <%= link_to "新しいチャレンジ", new_challenge_path, class: "btn btn-success" %>
  </div>

  <% if @challenges.empty? %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="bi bi-game-controller-outline" style="font-size: 4rem; color: #6c757d;"></i>
      </div>
      <h3 class="text-muted mb-3">まだチャレンジがありません</h3>
      <p class="text-muted mb-4">最初のナズロックチャレンジを始めてみましょう！</p>
      <%= link_to "チャレンジを始める", new_challenge_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% else %>
    <!-- 進行中のチャレンジ -->
    <% unless @active_challenges.empty? %>
      <div class="mb-5">
        <h3 class="mb-3">🚀 進行中のチャレンジ</h3>
        <div class="row">
          <% @active_challenges.each do |challenge| %>
            <div class="col-md-6 col-lg-4 mb-3">
              <%= render 'challenge_card', challenge: challenge %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- 完了したチャレンジ -->
    <% unless @completed_challenges.empty? %>
      <div class="mb-5">
        <h3 class="mb-3">🏆 完了したチャレンジ</h3>
        <div class="row">
          <% @completed_challenges.each do |challenge| %>
            <div class="col-md-6 col-lg-4 mb-3">
              <%= render 'challenge_card', challenge: challenge %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- 失敗したチャレンジ -->
    <% unless @failed_challenges.empty? %>
      <div class="mb-5">
        <h3 class="mb-3">💀 失敗したチャレンジ</h3>
        <div class="row">
          <% @failed_challenges.each do |challenge| %>
            <div class="col-md-6 col-lg-4 mb-3">
              <%= render 'challenge_card', challenge: challenge %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
