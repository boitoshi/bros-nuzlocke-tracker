<div class="card h-100 shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="badge <%= challenge.status_badge_class %>">
      <%= challenge.status == 'in_progress' ? '進行中' : 
          challenge.status == 'completed' ? '完了' : '失敗' %>
    </span>
    <small class="text-muted">
      <%= challenge.started_at.strftime('%Y/%m/%d') %>
    </small>
  </div>
  
  <div class="card-body">
    <h5 class="card-title"><%= challenge.name %></h5>
    <p class="card-text">
      <strong><%= challenge.game_title_display %></strong>
    </p>
    
    <div class="d-flex justify-content-between align-items-center mb-2">
      <small class="text-muted">
        プレイ日数: <%= challenge.duration_in_days %>日
      </small>
      <% if challenge.completed? %>
        <small class="text-success">
          <%= challenge.completed_at.strftime('%Y/%m/%d') %> 完了
        </small>
      <% end %>
    </div>
  </div>
  
  <div class="card-footer bg-transparent">
    <div class="d-flex gap-2">
      <%= link_to "詳細", challenge, class: "btn btn-outline-primary btn-sm flex-fill" %>
      <%= link_to "編集", edit_challenge_path(challenge), class: "btn btn-outline-secondary btn-sm" %>
      <%= link_to "削除", challenge_path(challenge), method: :delete, 
          confirm: "本当に削除しますか？", 
          class: "btn btn-outline-danger btn-sm" %>
    </div>
  </div>
</div>